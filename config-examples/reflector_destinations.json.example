  "destinations": [
    {
      "name": "SERVER1",
      "user": "wsprdaemon",
      "host": "server1.example.com",
      "path": "/var/spool/wsprdaemon/incoming"
    },
    {
      "name": "SERVER2",
      "user": "wsprdaemon",
      "host": "server2.example.com",
